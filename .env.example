# App configuration
HOST_PORT=4040                  # Port on which the app will be reachable from the host machine
PORT=3001                       # Port the app will run on inside the container
NODE_ENV=production             # Set to "development" or "production"

# JWT configuration
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_EXPIRES_IN=30m             # e.g., 30m, 1h
JWT_REFRESH_EXPIRES_IN=7d      # e.g., 7d, 30d

# PostgreSQL connection
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=appdb
DATABASE_URL=postgres://user:password@postgres_container:5432/appdb

# Email service configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=no-reply@example.com
EMAIL_PASS=emailpassword123

# Stripe integration
STRIPE_API_KEY=sk_test_yourStripeApiKeyHere
STRIPE_WEBHOOK_KEY=whsec_yourStripeWebhookSecret

# Redis configuration
REDIS_HOST=redis_container
REDIS_PORT=6379
